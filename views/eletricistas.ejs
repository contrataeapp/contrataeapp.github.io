<!DOCTYPE html>
<html lang="pt-br">
<head>
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-QJ7GX28055"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-QJ7GX28055');
    </script>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contrataê - Eletricistas</title>
    
    <link rel="stylesheet" href="/css/style_laranja_preto.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/pintores.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
</head>
<body>

    <% const bannerEsq = typeof banners !== 'undefined' && banners.find(b => b.posicao === 3); %>
    <% if (bannerEsq) { %>
    <div class="banner-lateral banner-esquerda" id="banner-mov">
        <button class="close-banner" title="Fechar anúncio">&times;</button>
        <div class="banner-content" data-link="<%= bannerEsq.link_destino || '#' %>">
            <img src="<%= bannerEsq.imagem_url %>" alt="<%= bannerEsq.titulo || 'Anúncio' %>">
        </div>
    </div>
    <% } %>

    <% const bannerDir = typeof banners !== 'undefined' && banners.find(b => b.posicao === 4); %>
    <% if (bannerDir) { %>
    <div class="banner-lateral banner-direita" id="banner-speed">
        <button class="close-banner" title="Fechar anúncio">&times;</button>
        <div class="banner-content" data-link="<%= bannerDir.link_destino || '#' %>">
            <img src="<%= bannerDir.imagem_url %>" alt="<%= bannerDir.titulo || 'Anúncio' %>">
        </div>
    </div>
    <% } %>

    <header class="airbnb-header">
        <div class="container header-grid">
            <div class="header-left">
                <a href="/" class="site-logo">
                    <img src="/imagens/logo/logo_contratae.png" alt="Logo Contrataê">
                </a>
            </div>

            <div class="header-center desktop-only">
                <div class="search-pill">
                    <input type="text" class="search-input-pill" placeholder="Busque por eletricista...">
                    <button class="search-btn-round"><i class="fas fa-search"></i></button>
                </div>
            </div>

            <div class="header-right">
                <div id="google_translate_element" class="desktop-only"></div>
                <button id="theme-toggle" class="icon-btn" title="Alternar Tema">
                    <i class="fas fa-moon"></i>
                </button>
                <a href="/auth/login" class="login-pill desktop-only">
                    <span class="login-text">Entrar / Cadastrar</span>
                    <span class="login-icon"><i class="fas fa-user-circle"></i></span>
                </a>
            </div>
        </div>
        
        <nav class="categories-nav" id="main-nav">
            <div class="container">
                <div class="nav-header mobile-only">
                    <h3>Menu</h3>
                    <button id="close-menu-btn"><i class="fas fa-times"></i></button>
                </div>
                <ul>
                    <li><a href="/"><i class="fas fa-home"></i> Início</a></li>
                    <li><a href="/pintores"><i class="fas fa-paint-roller"></i> Pintores</a></li>
                    <li><a href="/pedreiros"><i class="fa-solid fa-trowel-bricks"></i> Pedreiros</a></li>
                    <li><a href="/eletricistas" class="active"><i class="fas fa-bolt"></i> Eletricistas</a></li>
                    <li><a href="/encanadores"><i class="fas fa-wrench"></i> Encanadores</a></li>
                    <li><a href="/servicos_categorias"><i class="fas fa-th"></i> Outros</a></li>
                    <li><a href="/contato"><i class="fas fa-envelope"></i> Contato</a></li>
                    <li class="mobile-only"><a href="/auth/login"><i class="fas fa-user"></i> Entrar / Cadastrar</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <main>
        <div class="container" style="margin-top: 10px; margin-bottom: 40px;">
            <h2 class="section-title" style="text-align: center;">Eletricistas Disponíveis</h2>
            
            <div class="materials-alert-wrapper">
                <a href="#parceiros-area" class="materials-alert">
                    <div style="display: flex; align-items: center;">
                        <i class="fas fa-bolt mat-icon" style="margin-right: 15px;"></i>
                        <div class="mat-content">
                            <h4>Precisa de materiais elétricos?</h4>
                            <p>Veja ofertas de parceiros</p>
                        </div>
                    </div>
                    <i class="fas fa-chevron-down" style="color: #666; margin-left: 15px;"></i>
                </a>
            </div>

            <div class="professionals-grid">
                <% if (eletricistas.length === 0) { %>
                    <div style="text-align: center; width: 100%; padding: 40px; color: #ccc; grid-column: 1 / -1;">
                        <i class="fas fa-user-slash" style="font-size: 3rem; margin-bottom: 15px; color: #555;"></i>
                        <h3>Nenhum eletricista encontrado.</h3>
                        <p>Tente novamente mais tarde.</p>
                    </div>
                <% } else { %>
                    <% eletricistas.forEach(function(profissional) { %>
                        <div class="professional-card">
                            <div class="card-header-img">
                                <img src="<%= profissional.foto || '/imagens/equipe_site/Mascote.png' %>" alt="<%= profissional.nome %>">
                            </div>
                            <div class="card-body">
                                <h3><%= profissional.nome %></h3>
                                <p class="profissao-tag"><%= profissional.profissao %></p>
                                <div class="rating">
                                    <i class="fas fa-star" style="color: gold;"></i> <%= profissional.avaliacao || '5.0' %>
                                </div>
                                <div class="card-actions">
                                    <a href="#" 
                                       class="button primary-button trigger-modal" 
                                       data-link="https://wa.me/5516996484492?text=Olá, vi seu perfil no Contrataê e gostaria de fazer um orçamento.">
                                            <i class="fab fa-whatsapp"></i> Contatar
                                    </a>
                                    <button class="button secondary-button">Ver Perfil</button>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } %>
                
                <div class="ver-todos-container">
                    <a href="#" class="button secondary-button" style="padding: 10px 40px;">
                        Ver Todos os Profissionais <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>
    </main>

    <nav class="mobile-bottom-nav mobile-only">
        <a href="/" class="nav-item"><i class="fas fa-home"></i><span>Início</span></a>
        <a href="/#busca-rapida" class="nav-item"><i class="fas fa-search"></i><span>Busca</span></a>
        <button class="nav-item" id="mobile-menu-trigger"><i class="fas fa-bars"></i><span>Menu</span></button>
        <a href="/auth/login" class="nav-item"><i class="fas fa-user"></i><span>Entrar</span></a>
    </nav>

    <footer>
        <div class="footer-partners-area" id="parceiros-area">
            <div class="container">
                <h4 style="color: #ffa500; text-align: center; margin-bottom: 10px; font-size: 1rem;">Nossos Parceiros</h4>
                <section class="carousel-section footer-carousel" id="carousel-baixo">
                    <div class="carousel-container">
                        <% const bannersRodape = typeof banners !== 'undefined' ? banners.filter(b => b.posicao === 2) : []; %>
                        
                        <% if (bannersRodape.length > 0) { %>
                            <% bannersRodape.forEach(function(banner, index) { %>
                                <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                                    <a href="#" class="trigger-modal" data-link="<%= banner.link_destino || '#' %>">
                                        <img src="<%= banner.imagem_url %>" alt="<%= banner.titulo || 'Parceiro' %>" style="width:100%; height:100%;">
                                    </a>
                                </div>
                            <% }); %>
                        <% } else { %>
                            <div class="carousel-item active">
                                <a href="#" class="trigger-modal" data-link="https://wa.me/5516996484492?text=Olá, vi o anúncio do Ponto Forte no Contrataê e gostaria de mais informações!">
                                    <img src="/imagens/parceiros/ponto_forte.png" alt="Ponto Forte" style="width:100%; height:100%;">
                                </a>
                            </div>
                        <% } %>
                        <button class="carousel-btn prev-btn"><i class="fas fa-chevron-left"></i></button>
                        <button class="carousel-btn next-btn"><i class="fas fa-chevron-right"></i></button>
                        <div class="carousel-dots">
                            <% if (bannersRodape && bannersRodape.length > 0) { %>
                                <% bannersRodape.forEach(function(_, index) { %>
                                    <span class="dot <%= index === 0 ? 'active' : '' %>"></span>
                                <% }); %>
                            <% } else { %>
                                <span class="dot active"></span>
                            <% } %>
                        </div>
                    </div>
                </section>
            </div>
        </div>
        <div class="footer-copyright-bar">
            <div class="container copyright-flex">
                <p>&copy; 2026 Contrataê</p>
                <div class="footer-links">
                    <a href="feedback.html">Avaliação</a> | <a href="sobre_nos.html">Sobre Nós</a> | <a href="termos_de_uso.html">Termos</a>
                </div>
            </div>
        </div>
    </footer>

    <div id="external-link-modal" class="modal-overlay">
        <div class="modal-box">
            <h3>Você está saindo do Contrataê</h3>
            <p id="modal-msg">Você será redirecionado para o site de nosso parceiro.</p>
            <p class="modal-link-preview" id="modal-link-dest"></p>
            <div class="modal-buttons">
                <button id="cancel-link" class="button secondary-button">Cancelar</button>
                <button id="confirm-link" class="button primary-button">Continuar</button>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        function googleTranslateElementInit() {
          new google.translate.TranslateElement({pageLanguage: 'pt', includedLanguages: 'pt,en', layout: google.translate.TranslateElement.InlineLayout.SIMPLE}, 'google_translate_element');
        }
    </script>
    <script type="text/javascript" src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    <script src="/js/theme-toggle.js"></script>
    <script src="/js/index.js"></script>
    
    <div vw class="enabled">
        <div vw-access-button class="active"></div>
        <div vw-plugin-wrapper><div class="vw-plugin-top-wrapper"></div></div>
    </div>
    <script src="https://vlibras.gov.br/app/vlibras-plugin.js"></script>
    <script>new window.VLibras.Widget('https://vlibras.gov.br/app');</script>
</body>
</html>